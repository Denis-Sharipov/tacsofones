<Window x:Class="TacsofonObj.DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TacsofonObj.DesktopClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <FontFamily x:Key="Montserrat-Medium">
            pack://application:,,,/Fonts/#Med Uch Regular
        </FontFamily>
    </Window.Resources>
    <Grid TextBlock.FontFamily="{StaticResource Montserrat-Medium}" TextBlock.FontSize="14">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" Padding="5" Background="Red" Foreground="white" ItemsSource="{Binding TacsofonObjs}" SelectedItem="{Binding CurrentTacsofonObj}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock FontSize="14" Text="{Binding Path=Name}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Column="1" DataContext="{Binding CurrentTacsofonObj}" Margin="0,0,0,0">
            <TextBlock Padding="3" FontWeight="Bold" Text="More Info:" HorizontalAlignment="Center"/>
            <TextBlock Padding="2" TextWrapping="Wrap" Text="{Binding StringFormat=Name: {0}, Path=Name }"/>
            <TextBlock Padding="2" TextWrapping="Wrap" Text="{Binding StringFormat=Adres: {0}, Path=Adres}" />
            <TextBlock Padding="2" TextWrapping="Wrap" Text="{Binding StringFormat=Oplata: {0}, Path=Oplata}" />
            <TextBlock Padding="2" TextWrapping="Wrap" Text="{Binding StringFormat=Platnost: {0}, Path=Platnost}" />
            <TextBlock Padding="2" TextWrapping="Wrap" Text="{Binding StringFormat=Card: {0}, Path=Card}" />
        </StackPanel>
    </Grid>
</Window>
